{
  "name": "<%= appName %>",
  "version": "<%= appVersion %>",
  "description": "<%= appDescription %>",
  "main": "index.html",
  "window": {
    "title": "<%= appTitle %>",
    "toolbar": true,
    "frame": <%= appFrame %>,
    "resizable": <%= appResizable %>,
    "position": "<%= appWindowPosition %>",
    "width": <%= appWidth %>,
    "height": <%= appHeight %>
  },
  "repository": {
    "url": "<%= appRepository %>"
  },
  "author": {
    "name": "<%= appAuthor %>",
    "url": "<%= appEmail %>"
  },
  "dependencies": {
	"nw": "*"
  },
  "devDependencies": {
    "gulp": "^3.9.0",
    "gulp-shell": "^0.5.1",
	"nw-builder": "^2.0.2"
  },
  "license": "<%= appLicense %>"
}
